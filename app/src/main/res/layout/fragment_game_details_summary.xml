<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/game_details_image_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:src="@drawable/favicon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/game_details_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nintendo R&amp;D4" />

            <TextView
                android:id="@+id/game_details_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nintendo" />

            <TextView
                android:id="@+id/game_details_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Platformer" />

            <TextView
                android:id="@+id/game_details_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="September 1985" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/achievements"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/game_details_user_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:padding="8dp"
            android:textSize="12sp"
            tools:text="You have earned 8 of 72 achievements,\nand a further 8 HARDCORE achievements,\nworth 16 (8) points of 400 (3836) possible points." />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/game_details_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10000"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:progress="2200" />

            <TextView
                android:id="@+id/game_details_progress_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                tools:text="22% complete" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/game_details_achievements_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>