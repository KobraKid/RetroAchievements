<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_details_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/game_details_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="10000"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:secondaryProgressTint="?attr/colorPrimary"
        android:secondaryProgressTintMode="src_over"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/game_details_progress_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/game_details_user_summary"
        app:layout_constraintTop_toBottomOf="@+id/game_details_achievements_title"
        app:layout_constraintVertical_chainStyle="packed"
        tools:progress="2200"
        tools:secondaryProgress="4000"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/game_details_progress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/game_details_achievements_recycler_view"
        app:layout_constraintEnd_toEndOf="@+id/game_details_progress"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/game_details_progress"
        app:layout_constraintTop_toBottomOf="@+id/game_details_progress"
        tools:text="22% complete" />

    <ProgressBar
        android:id="@+id/game_details_loading_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/game_details_user_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_details_achievements_title"
        tools:text="You have earned 8 of 72 achievements,\nand a further 8 HARDCORE achievements,\nworth 16 (8) points of 400 (3836) possible points." />

    <TextView
        android:id="@+id/game_details_achievements_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/achievements"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/game_details_no_achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="@string/no_achievements"
        android:textColor="?attr/colorAccent"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/game_details_achievements_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_details_user_summary"
        tools:itemCount="1"
        tools:listitem="@layout/view_holder_achievement_summary"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>