<resources>

    <!-- Attributes -->
    <attr name="current_theme" format="reference" />

    <!-- Common Themes -->
    <style name="CommonThemes.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="CommonThemes.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CommonThemes.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
    </style>

    <style name="CommonThemes.CardView" parent="CardView">
        <item name="cardBackgroundColor">?android:windowBackground</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CommonThemes.DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.Overflow" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorError</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">?attr/colorError</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Blank Theme -->
    <style name="BlankTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blank_colorPrimary</item>
        <item name="colorPrimaryDark">@color/blank_colorPrimaryDark</item>
        <item name="colorError">@color/blank_colorError</item>
        <item name="colorAccent">@color/blank_colorAccent</item>

        <item name="android:windowBackground">@color/blank_colorError</item>
        <item name="android:textColorPrimary">@color/blank_colorPrimary</item>
        <item name="android:textColor">@color/blank_colorPrimary</item>
        <item name="android:textColorHint">@color/blank_colorAccent</item>
        <item name="colorButtonNormal">@color/blank_colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/CommonThemes.Button</item>
        <item name="android:progressBarStyle">@style/CommonThemes.ProgressBar</item>
        <item name="android:checkboxStyle">@style/CommonThemes.CheckBox</item>
        <item name="drawerArrowStyle">@style/CommonThemes.DrawerIconStyle</item>
        <item name="actionOverflowButtonStyle">@style/CommonThemes.OverflowButton</item>
        <item name="android:spinnerDropDownItemStyle">@style/CommonThemes.Spinner</item>

        <item name="current_theme">@style/BlankTheme</item>
    </style>

    <!-- 2016 theme -->
    <style name="TwentySixteenTheme" parent="BlankTheme">
        <item name="colorPrimary">@color/twentySixteen_colorPrimary</item>
        <item name="colorPrimaryDark">@color/twentySixteen_colorPrimaryDark</item>
        <item name="colorError">@color/twentySixteen_colorError</item>
        <item name="colorAccent">@color/twentySixteen_colorAccent</item>

        <item name="android:windowBackground">@color/twentySixteen_colorError</item>
        <item name="android:textColorPrimary">@color/twentySixteen_colorPrimary</item>
        <item name="android:textColor">@color/twentySixteen_colorPrimary</item>
        <item name="android:textColorHint">@color/twentySixteen_colorAccent</item>
        <item name="colorButtonNormal">@color/twentySixteen_colorPrimaryDark</item>

        <item name="current_theme">@style/TwentySixteenTheme</item>
    </style>

    <!-- Green Theme -->
    <style name="GreenTheme" parent="BlankTheme">
        <item name="colorPrimary">@color/green_colorPrimary</item>

        <item name="android:textColorPrimary">@color/green_colorPrimary</item>
        <item name="android:textColor">@color/green_colorPrimary</item>

        <item name="current_theme">@style/GreenTheme</item>
    </style>

    <!-- Pony Theme -->
    <style name="PonyTheme" parent="BlankTheme">
        <item name="colorPrimary">@color/pony_colorPrimary</item>
        <item name="colorAccent">@color/pony_colorAccent</item>

        <item name="android:textColorPrimary">@color/pony_colorPrimary</item>
        <item name="android:textColor">@color/pony_colorPrimary</item>
        <item name="android:textColorHint">@color/pony_colorAccent</item>

        <item name="current_theme">@style/PonyTheme</item>
    </style>

    <!-- Red Theme -->
    <style name="RedTheme" parent="BlankTheme">
        <item name="colorPrimary">@color/red_colorPrimary</item>
        <item name="colorAccent">@color/red_colorAccent</item>

        <item name="android:textColorPrimary">@color/red_colorPrimary</item>
        <item name="android:textColor">@color/red_colorPrimary</item>
        <item name="android:textColorHint">@color/red_colorAccent</item>

        <item name="current_theme">@style/RedTheme</item>
    </style>

    <!-- Spooky Theme -->
    <style name="SpookyTheme" parent="BlankTheme">
        <item name="colorPrimary">@color/spooky_colorPrimary</item>
        <item name="colorPrimaryDark">@color/spooky_colorPrimaryDark</item>
        <item name="colorError">@color/spooky_colorError</item>
        <item name="colorAccent">@color/spooky_colorAccent</item>

        <item name="android:windowBackground">@color/spooky_colorError</item>
        <item name="android:textColorPrimary">@color/spooky_colorPrimary</item>
        <item name="android:textColor">@color/spooky_colorPrimary</item>
        <item name="android:textColorHint">@color/spooky_colorAccent</item>
        <item name="colorButtonNormal">@color/spooky_colorPrimaryDark</item>

        <item name="current_theme">@style/SpookyTheme</item>
    </style>

</resources>
