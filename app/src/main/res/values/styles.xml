<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Attributes -->
    <attr name="current_theme" format="reference" />

    <!-- Common Themes -->
    <style name="CommonThemes.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="CommonThemes.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background"><![CDATA[@android:color/transparent]]></item>
    </style>

    <style name="CommonThemes.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorAccent</item>
    </style>

    <style name="CommonThemes.CardView" parent="CardView">
        <item name="cardBackgroundColor">?android:windowBackground</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CommonThemes.DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.Overflow" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">?attr/colorError</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="CommonThemes.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">?attr/colorError</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AlertDialogLogin" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:background">?attr/colorError</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Blank Theme -->
    <style name="BlankTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary"><![CDATA[@color/blank_colorPrimary]]></item>
        <item name="colorPrimaryDark"><![CDATA[@color/blank_colorPrimaryDark]]></item>
        <item name="colorError"><![CDATA[@color/blank_colorError]]></item>
        <item name="colorAccent"><![CDATA[@color/blank_colorAccent]]></item>

        <item name="android:windowBackground"><![CDATA[@color/blank_colorError]]></item>
        <item name="android:textColorPrimary"><![CDATA[@color/blank_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/blank_colorPrimary]]></item>
        <item name="android:textColorHint"><![CDATA[@color/blank_colorAccent]]></item>
        <item name="colorButtonNormal"><![CDATA[@color/blank_colorPrimaryDark]]></item>
        <item name="android:buttonStyle">@style/CommonThemes.Button</item>
        <item name="android:progressBarStyle">@style/CommonThemes.ProgressBar</item>
        <item name="android:checkboxStyle">@style/CommonThemes.CheckBox</item>
        <item name="drawerArrowStyle">@style/CommonThemes.DrawerIconStyle</item>
        <item name="actionOverflowButtonStyle">@style/CommonThemes.OverflowButton</item>
        <item name="android:spinnerDropDownItemStyle">@style/CommonThemes.Spinner</item>

        <item name="current_theme">@style/BlankTheme</item>
    </style>

    <!-- 2016 theme -->
    <style name="TwentySixteenTheme" parent="BlankTheme">
        <item name="colorPrimary"><![CDATA[@color/twentySixteen_colorPrimary]]></item>
        <item name="colorPrimaryDark"><![CDATA[@color/twentySixteen_colorPrimaryDark]]></item>
        <item name="colorError"><![CDATA[@color/twentySixteen_colorError]]></item>
        <item name="colorAccent"><![CDATA[@color/twentySixteen_colorAccent]]></item>

        <item name="android:windowBackground"><![CDATA[@color/twentySixteen_colorError]]></item>
        <item name="android:textColorPrimary"><![CDATA[@color/twentySixteen_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/twentySixteen_colorPrimary]]></item>
        <item name="android:textColorHint"><![CDATA[@color/twentySixteen_colorAccent]]></item>
        <item name="colorButtonNormal"><![CDATA[@color/twentySixteen_colorPrimaryDark]]></item>

        <item name="current_theme">@style/TwentySixteenTheme</item>
    </style>

    <!-- Green Theme -->
    <style name="GreenTheme" parent="BlankTheme">
        <item name="colorPrimary"><![CDATA[@color/green_colorPrimary]]></item>

        <item name="android:textColorPrimary"><![CDATA[@color/green_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/green_colorPrimary]]></item>

        <item name="current_theme">@style/GreenTheme</item>
    </style>

    <!-- Pony Theme -->
    <style name="PonyTheme" parent="BlankTheme">
        <item name="colorPrimary"><![CDATA[@color/pony_colorPrimary]]></item>
        <item name="colorAccent"><![CDATA[@color/pony_colorAccent]]></item>

        <item name="android:textColorPrimary"><![CDATA[@color/pony_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/pony_colorPrimary]]></item>
        <item name="android:textColorHint"><![CDATA[@color/pony_colorAccent]]></item>

        <item name="current_theme">@style/PonyTheme</item>
    </style>

    <!-- Red Theme -->
    <style name="RedTheme" parent="BlankTheme">
        <item name="colorPrimary"><![CDATA[@color/red_colorPrimary]]></item>
        <item name="colorAccent"><![CDATA[@color/red_colorAccent]]></item>

        <item name="android:textColorPrimary"><![CDATA[@color/red_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/red_colorPrimary]]></item>
        <item name="android:textColorHint"><![CDATA[@color/red_colorAccent]]></item>

        <item name="current_theme">@style/RedTheme</item>
    </style>

    <!-- Spooky Theme -->
    <style name="SpookyTheme" parent="BlankTheme">
        <item name="colorPrimary"><![CDATA[@color/spooky_colorPrimary]]></item>
        <item name="colorPrimaryDark"><![CDATA[@color/spooky_colorPrimaryDark]]></item>
        <item name="colorError"><![CDATA[@color/spooky_colorError]]></item>
        <item name="colorAccent"><![CDATA[@color/spooky_colorAccent]]></item>

        <item name="android:windowBackground"><![CDATA[@color/spooky_colorError]]></item>
        <item name="android:textColorPrimary"><![CDATA[@color/spooky_colorPrimary]]></item>
        <item name="android:textColor"><![CDATA[@color/spooky_colorPrimary]]></item>
        <item name="android:textColorHint"><![CDATA[@color/spooky_colorAccent]]></item>
        <item name="colorButtonNormal"><![CDATA[@color/spooky_colorPrimaryDark]]></item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="current_theme">@style/SpookyTheme</item>
    </style>

</resources>
