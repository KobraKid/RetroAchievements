    <!-- Spooky Theme -->
    <style name="SpookyTheme">
        <item name="colorPrimary">@color/spooky_colorPrimary</item>
        <item name="colorPrimaryDark">@color/spooky_colorPrimaryDark</item>
        <item name="colorError">@color/spooky_colorError</item>
        <item name="colorAccent">@color/spooky_colorAccent</item>

        <item name="android:background">@color/spooky_colorError</item>
        <item name="android:textColor">@color/spooky_colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/spooky_colorPrimary</item>
        <item name="android:itemTextAppearance">@color/spooky_colorPrimary</item>
        <item name="android:textColorPrimary">@color/spooky_colorPrimary</item>
